<Window x:Class="WpfAppBookStore.View.ViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppBookStore.View"
        xmlns:com="clr-namespace:WpfAppBookStore.Commands"
        mc:Ignorable="d"
        Title="ViewWindow" Height="450" Width="800">
    <Window.CommandBindings>
        <!--<CommandBinding Command="com:WindowCommands.SaveBook" Executed="SaveBook_Executed"/>
        <CommandBinding Command="com:WindowCommands.Cancle" Executed="Cancle_Executed"/>-->
    </Window.CommandBindings>
    <Grid>
        <Grid x:Name="layoutGrid" Margin="-10,-10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label Content="Жанры" Grid.Row="0" Grid.Column="0" Width="130"  HorizontalAlignment="Center" Height="50" VerticalAlignment="Bottom" FontSize="30" FontWeight="Bold" FontStyle="Italic"/>
            <Label Content="Книги" Grid.Row="0" Grid.Column="1" Width="130"  HorizontalAlignment="Center" Height="50" VerticalAlignment="Bottom" FontSize="30" FontWeight="Bold" FontStyle="Italic"/>
            <ListView x:Name="lstGenre"  Grid.Row="1" Grid.Column="0"   HorizontalAlignment="Center"  VerticalAlignment="Bottom" FontSize="18" FontWeight="Bold" FontStyle="Normal"/>
            <ListView x:Name="lstBook"  Grid.Row="1" Grid.Column="1"  HorizontalAlignment="Center"  VerticalAlignment="Bottom" FontSize="18" FontWeight="Bold" FontStyle="Normal"/>
            <ScrollBar HorizontalAlignment="Right" Margin="190,0,0,351" Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom"/>
            <ScrollBar HorizontalAlignment="Right" Margin="190,0,0,351" Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom"/>
        </Grid>


    </Grid>
</Window>
