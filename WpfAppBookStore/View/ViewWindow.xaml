<Window x:Class="WpfAppBookStore.View.ViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppBookStore.View"
        xmlns:com="clr-namespace:WpfAppBookStore.Commands"
        xmlns:db="clr-namespace:WpfAppBookStore.DbBookStore"
        mc:Ignorable="d"
        Title="ViewWindow" Height="450" Width="800">
    <Window.CommandBindings>
        <CommandBinding Command="com:WindowCommands.LoadListGenre" Executed="LoadListGenre_Executed"/>
        <CommandBinding Command="com:WindowCommands.LoadListBook" Executed="LoadListBook_Executed"/>
        <CommandBinding Command="com:WindowCommands.AddGenre" Executed="AddGenre_Executed"/>
    </Window.CommandBindings>
    <Window.Resources>
        <!--<Style>
            
        </Style>-->
    </Window.Resources>
    <Grid>
        <Grid x:Name="layoutGrid" Margin="-10,-10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button x:Name="btnLstGenre" Command="com:WindowCommands.LoadListGenre"  Content="Жанры" Width="180"  HorizontalAlignment="Center" Height="50" VerticalAlignment="Center" FontSize="30" FontWeight="Bold" FontStyle="Italic"/>
            <Button x:Name="btnlstBook" Command="com:WindowCommands.LoadListBook"  Content="Книги" Grid.Column="1" Width="240"  HorizontalAlignment="Center" Height="50" VerticalAlignment="Center" FontSize="30" FontWeight="Bold" FontStyle="Italic"/>
            <ListView x:Name="lstGenre"  Grid.Row="1" Grid.Column="0"   HorizontalAlignment="Center"  VerticalAlignment="Bottom" FontSize="18" FontWeight="Bold" FontStyle="Normal"/>
            <ListView x:Name="lstBook"  Grid.Row="1" Grid.Column="1"  HorizontalAlignment="Center"  VerticalAlignment="Bottom" FontSize="18" FontWeight="Bold" FontStyle="Normal"/>
            <ScrollBar HorizontalAlignment="Right" Margin="190,0,0,351" Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom"/>
            <ScrollBar HorizontalAlignment="Right" Margin="190,0,0,351" Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom"/>
            <Button x:Name="AddGenre" Command="com:WindowCommands.AddGenre"  Content="Добавить жанр" HorizontalAlignment="Center" Margin="0,352,0,0" Grid.Row="1" VerticalAlignment="Top" Width="180"/>
            <Button x:Name="AddBook"  Grid.Column="1" Content="Добавить книгу" HorizontalAlignment="Left" Margin="0,352,0,0" Grid.Row="1" VerticalAlignment="Top" Width="230"/>
        </Grid>


    </Grid>
</Window>
