<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppBookStore.View"
        xmlns:com="clr-namespace:WpfAppBookStore.Commands"
        xmlns:db="clr-namespace:WpfAppBookStore.DbBookStore"
        xmlns:SqlClient="clr-namespace:Microsoft.Data.SqlClient;assembly=Microsoft.Data.SqlClient" x:Class="WpfAppBookStore.View.ViewWindow"
        mc:Ignorable="d"
        Title="ViewWindow" Height="450" Width="800">
    <Window.CommandBindings>
        <CommandBinding Command="com:WindowCommands.LoadListGenre" Executed="LoadListGenre_Executed"/>
        <CommandBinding Command="com:WindowCommands.LoadListBook" Executed="LoadListBook_Executed"/>
        <CommandBinding Command="com:WindowCommands.AddGenre" Executed="AddGenre_Executed"/>
        <CommandBinding Command="com:WindowCommands.AddBook" Executed="AddBook_Executed"/>
    </Window.CommandBindings>
    <Grid>
        <Grid x:Name="layoutGrid" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button x:Name="btnLstGenre" Command="com:WindowCommands.LoadListGenre"  Content="Жанры" Width="180"  HorizontalAlignment="Center" Height="50" VerticalAlignment="Center" FontSize="30" FontWeight="Bold" FontStyle="Italic"/>
            <Button x:Name="btnlstBook" Command="com:WindowCommands.LoadListBook"  Content="Книги" Grid.Column="1" Width="240"  HorizontalAlignment="Center" Height="50" VerticalAlignment="Center" FontSize="30" FontWeight="Bold" FontStyle="Italic"/>
            <ListView x:Name="lstGenre"   Grid.Row="1" Grid.Column="0"   HorizontalAlignment="Center"  VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontStyle="Normal"/>
            <ListView x:Name="lstBook"  Grid.Row="1" Grid.Column="1"  HorizontalAlignment="Center"  VerticalAlignment="Top" FontSize="16" FontWeight="Bold" FontStyle="Normal"/>
            <ScrollBar HorizontalAlignment="Right" Margin="0,0,5,0" Height="320" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" RenderTransformOrigin="-0.28,0.583" Width="12"/>
            <ScrollBar HorizontalAlignment="Right" Margin="0,0,5,60" Height="320" Grid.Row="1" Grid.Column="1" VerticalAlignment="Bottom"/>
            <Button x:Name="btnAddGenre" Command="com:WindowCommands.AddGenre"  Content="Добавить жанр" HorizontalAlignment="Center" Margin="0,322,0,0" Grid.Row="1" VerticalAlignment="Top" Width="180"/>
            <Button x:Name="btnAddBook" Command="com:WindowCommands.AddBook" Grid.Column="1" Content="Добавить книгу" HorizontalAlignment="Left" Margin="0,322,0,0" Grid.Row="1" VerticalAlignment="Top" Width="230"/>
        </Grid>


    </Grid>
</Window>
